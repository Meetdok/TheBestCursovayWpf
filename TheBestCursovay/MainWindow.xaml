<Window x:Class="TheBestCursovay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBestCursovay"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="800">

    <Grid Margin="0,0,0,-6">
        <Menu Height="23" VerticalAlignment="Top">
            <MenuItem Header="Списки поступления" Cursor="Hand" Height="23">
                <MenuItem Header="Список" Foreground="#FF080303" Cursor="Hand" Command="{Binding FirstList}"/>
                <MenuItem Header="Список Поступления" Foreground="#FF080303" Cursor="Hand" Command="{Binding SecondList}"/>
                </MenuItem>
        </Menu>
        <Frame Content="{Binding CurrentPage}" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
